{{!-- Main layout into which all views are rendered --}}
<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>|Blog-O-Tech|</title>
  <link type="text/css" rel="stylesheet" href="/css/jass.css"></link>
  <link type="text/css" rel="stylesheet" href="/css/style.css"></link>
  
</head>

<body>
  <nav>
    <!-- Conditionally render login or logout links -->
    {{#if logged_in}}
    <a href="/profile">profile</a> |
    <button class="no-button" id="logout">logout</button>
    {{else}}
    <a href="/api/user/login">login</a>
    {{/if}}
  </nav>
      {{{body}}}

  <!-- Conditionally render the appropriate javascript -->
  {{#if logged_in}}
  <script type="text/javascript" src="/js/logout.js"></script>
  {{else }}
  <script type="text/javascript" src="/js/login.js"></script>
  {{/if}}
</body>

</html>