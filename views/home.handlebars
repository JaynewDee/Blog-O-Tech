<!-- Loop over each object in the posts array -->
<h3>POSTLOG</h3>
<button id="redirect-btn">CREATE NEW POST</button>
{{#each posts as |post| }}
<div class="row mb-4 post">
  <div class="col-md-5">
    <h2>
      <a href="/post/{{post.id}}">{{post.name}}</a>
    </h2>
    <p>Created by {{post.user.name}} on {{post.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{post.body}}
    </p>
  </div>
</div>
{{/each}}

<script type="text/javascript" src="/js/home.js"></script>
